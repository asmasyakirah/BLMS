@model BLMS.Models.SOP.PageCompetentPersonnel

@{
    ViewData["Title"] = "Register Competent Personnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-user-ninja info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Register Competent Personnel
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="Register" autocomplete="off">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="CompetentPersonnel.PersonnelId" />
                                <input type="hidden" asp-for="CompetentPersonnel.CreatedDt" />
                                <input type="hidden" asp-for="CompetentPersonnel.CreatedBy" />
                                <input type="hidden" asp-for="CompetentPersonnel.UpdatedDt" />
                                <input type="hidden" asp-for="CompetentPersonnel.UpdatedBy" />

                                <div class="row">
                                    <!-- Grid column -->
                                    <div class="col-md-12">
                                        <div id="alert" class="form-group">
                                            @Html.Raw(@ViewBag.Alert)
                                        </div>
                                    </div>
                                    <!-- Grid column -->
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <select asp-for="CompetentPersonnel.BusinessDiv"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofBusinessDiv ,"DivName", "DivName"))">
                                                <option selected disabled>Please Select @Html.DisplayNameFor(model => Model.CompetentPersonnel.BusinessDiv)</option>
                                            </select>
                                            <label asp-for="CompetentPersonnel.BusinessDiv" class="mdb-main-label" for="DivName"><span style="color:red;">*</span> @Html.DisplayNameFor(model => model.CompetentPersonnel.BusinessDiv)</label>
                                            <span asp-validation-for="CompetentPersonnel.BusinessDiv" class="text-danger text-sm"></span>
                                            @*<input asp-for="" class="form-control" placeholder="Please Select @Html.DisplayNameFor(model => model.CompetentPersonnel.BusinessDiv)">
                                                <label asp-for="CompetentPersonnel.BusinessDiv" class="control-label"><span style="color:red;">*</span> @Html.DisplayNameFor(model => model.CompetentPersonnel.BusinessDiv)</label>
                                                <span asp-validation-for="CompetentPersonnel.BusinessDiv" class="text-danger text-sm"></span>*@
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <select asp-for="CompetentPersonnel.BusinessUnit"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofBusinessUnit ,"UnitName", "UnitName"))">
                                                    <option selected disabled>Please Select @Html.DisplayNameFor(model => Model.CompetentPersonnel.BusinessUnit)</option>
                                            </select>
                                            <label asp-for="CompetentPersonnel.BusinessUnit" class="mdb-main-label" for="UnitName"><span style="color:red;">*</span> @Html.DisplayNameFor(model => model.CompetentPersonnel.BusinessUnit)</label>
                                            <span asp-validation-for="CompetentPersonnel.BusinessUnit" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.PersonnelName" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.PersonnelName)">
                                            <label asp-for="CompetentPersonnel.PersonnelName" class="control-label"><span style="color:red;">*</span> @Html.DisplayNameFor(model => model.CompetentPersonnel.PersonnelName)</label>
                                            <span asp-validation-for="CompetentPersonnel.PersonnelName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.Icno" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.Icno)">
                                            <label asp-for="CompetentPersonnel.Icno" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.Icno)</label>
                                            <span asp-validation-for="CompetentPersonnel.Icno" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.YearAwarded" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.YearAwarded)">
                                            <label asp-for="CompetentPersonnel.YearAwarded" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.YearAwarded)</label>
                                            <span asp-validation-for="CompetentPersonnel.YearAwarded" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.AppointedDt" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.AppointedDt)">
                                            <label asp-for="CompetentPersonnel.AppointedDt" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.AppointedDt)</label>
                                            <span asp-validation-for="CompetentPersonnel.AppointedDt" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.ExpiredDt" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.ExpiredDt)">
                                            <label asp-for="CompetentPersonnel.ExpiredDt" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.ExpiredDt)</label>
                                            <span asp-validation-for="CompetentPersonnel.ExpiredDt" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.RegNo" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.RegNo)">
                                            <label asp-for="CompetentPersonnel.RegNo" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.RegNo)</label>
                                            <span asp-validation-for="CompetentPersonnel.RegNo" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.Branch" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.Branch)">
                                            <label asp-for="CompetentPersonnel.Branch" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.Branch)</label>
                                            <span asp-validation-for="CompetentPersonnel.Branch" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <select asp-for="CompetentPersonnel.CertFrom"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofCertBody ,"CertBodyName", "CertBodyName"))">
                                                <option selected disabled>Please Select @Html.DisplayNameFor(model => Model.CompetentPersonnel.CertFrom)</option>
                                            </select>
                                            <label asp-for="CompetentPersonnel.CertFrom" class="mdb-main-label" for="CertBodyName"><span style="color:red;">*</span> @Html.DisplayNameFor(model => model.CompetentPersonnel.CertFrom)</label>
                                            <span asp-validation-for="CompetentPersonnel.CertFrom" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.CertType" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.CertType)">
                                            <label asp-for="CompetentPersonnel.CertType" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.CertType)</label>
                                            <span asp-validation-for="CompetentPersonnel.CertType" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CompetentPersonnel.CertNo" class="form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.CertNo)">
                                            <label asp-for="CompetentPersonnel.CertNo" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.CertNo)</label>
                                            <span asp-validation-for="CompetentPersonnel.CertNo" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <textarea asp-for="CompetentPersonnel.CertFileName" rows="3" class="md-textarea form-control" placeholder="Type New @Html.DisplayNameFor(model => model.CompetentPersonnel.CertFileName)"></textarea>
                                            <label asp-for="CompetentPersonnel.CertFileName" class="control-label">@Html.DisplayNameFor(model => model.CompetentPersonnel.CertFileName)</label>
                                            <span asp-validation-for="CompetentPersonnel.CertFileName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                @{
                                    if (Model.CompetentPersonnel.CreatedBy != null)
                                    {
                                        <span class="text-sm font-italic">Created by @Html.DisplayFor(model => model.CompetentPersonnel.CreatedBy) on @Html.DisplayFor(model => model.CompetentPersonnel.CreatedDt)<br /></span>
                                    }
                                    if (Model.CompetentPersonnel.UpdatedBy != null)
                                    {
                                        <span class="text-sm font-italic">Updated by @Html.DisplayFor(model => model.CompetentPersonnel.UpdatedBy) on @Html.DisplayFor(model => model.CompetentPersonnel.UpdatedDt)</span>
                                    }
                                }

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Register" class="btn btn-outline-primary waves-effect" />
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mdb-select').materialSelect();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}