@model BLMS.v2.Models.Admin.Authority

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Page header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="text-bold">AUTHORITY LINK - EDIT</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active"><a href="~/AuthorityLink/Index">Authority Link</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <form asp-action="Edit" autocomplete="off">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" hidden>
                                <label asp-for="AuthorityID" class="control-label"></label>
                                <input asp-for="AuthorityID" class="form-control" />
                                <span asp-validation-for="AuthorityID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuthorityName" class="control-label text-sm" style="color:red">*</label>
                                <label asp-for="AuthorityName" class="control-label text-sm"></label>
                                <input asp-for="AuthorityName" class="form-control text-sm" onkeyup="this.value=this.value.toUpperCase()" />
                                <span asp-validation-for="AuthorityName" class="text-danger text-sm"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuthorityLink" class="control-label text-sm" style="color:red">*</label>
                                <label asp-for="AuthorityLink" class="control-label text-sm"></label>
                                <textarea asp-for="AuthorityLink" class="form-control text-sm" rows="5"></textarea>
                                <span asp-validation-for="AuthorityLink" class="text-danger text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary btn-sm text-white" />
                    <a asp-action="Index" class="btn btn-success btn-sm text-white"> Back</a>
                </div>
            </div>

            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                window.onload = function () {
                alert("@ViewBag.Message");
            };
                </script>
            }
        </form>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
