@model IEnumerable<BLMS.v2.Models.Admin.Authority>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Page header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="text-bold">AUTHORITY LINK</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active">Authority Link</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <table id="authority" class="table table-bordered" style="width:100%">
                    <thead class="text-center table-active">
                        <tr>
                            <th class="text-sm align-text-top col-md-4">
                                @Html.DisplayNameFor(model => model.AuthorityName)
                            </th>
                            <th class="text-sm align-text-top col-md-6">
                                @Html.DisplayNameFor(model => model.AuthorityLink)
                            </th>
                            <th class="text-sm align-text-top col-md-2">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-sm">
                                    @Html.DisplayFor(modelItem => item.AuthorityName)
                                </td>
                                <td class="text-sm text-break">
                                    <a href="@item.AuthorityLink" target="_blanK">@Html.DisplayFor(modelItem => item.AuthorityLink)</a>
                                </td>
                                <td class="text-sm">
                                    @Html.ActionLink("Edit", "Edit", new { AuthorityID = item.AuthorityID }, new { @class = "btn btn-primary btn-sm" }) 
                                    @Html.ActionLink("Delete", "Delete", new { AuthorityID = item.AuthorityID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are sure wants to delete?');" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-success btn-block btn-sm text-white">Create Authority Link</a>
            </div>
        </div>

        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#authority').DataTable();
            responsive: true
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
